{
	"name": "kittr",
	"version": "0.0.0",
	"private": true,
	"packageManager": "pnpm@7.17.1",
	"scripts": {
		"dx": "run-s env:clear env:dev docker:up dev",
		"dx:db-seed": "node ./scripts/createEnvironment/prisma.js && turbo run seed",
		"dx:db-view": "run-s env:prisma db-studio",
		"dx:db-nuke": "cd packages && cd prisma && pnpm db-reset",
		"dx:db-snapshot": "docker exec postgres pg_dump -U turboAf -Fc -f backup.sql prisma",
		"dx:seed-snapshot": "docker exec -i postgres dropdb dev -U dev && echo DB dropped. && docker exec -i postgres pg_restore -U dev -d template1 -v \"backup.pgsql\" --create ",
		"dx:sb": "turbo run dev --filter=storybook",
		"type-check": "turbo run type-check",
		"lint": "turbo run lint",
		"test": "turbo run test",
		"clean": "turbo run clean && echo Removing top-level node_modules... && rm -rf node_modules && echo All clean!",
		"prettier-write": "prettier --write \"**/*.{ts,tsx,md}\"",
		"kill-ports": "npx kill-port 3000,3001,3002,5555",
		"dev": "turbo run dev --filter=!storybook",
		"db-studio": "cd packages/prisma && pnpm db-studio",
		"env:clear": "node ./scripts/createEnvironment/clear.js",
		"env:prisma": "node ./scripts/createEnvironment/prisma.js && pnpm docker:up",
		"env:local-prod": "node ./scripts/createEnvironment/local-prod.js",
		"env:dev": "node ./scripts/createEnvironment/dev.js && pnpm docker:up",
		"docker:up": "docker compose -f docker-compose.yml up --build -d",
		"docker:down": "docker compose -f docker-compose.yml down",
		"dev:deploy": "docker-compose -f docker-compose.deploy.yml up",
		"build:api": "turbo run build --filter=api",
		"start:api": "turbo run start --filter=api",
		"test:e2e": "cd lib && cd e2e && npm run cypress:e2e"
	},
	"devDependencies": {
		"envfile": "6.17.0",
		"npm-run-all": "4.1.5",
		"prettier": "2.7.1",
		"turbo": "1.4.6"
	},
	"engines": {
		"npm": ">=8.0.0",
		"node": ">=16.0.0"
	}
}

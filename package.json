{
  "name": "kittr",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "build:api": "turbo build --filter=api",
    "build:local": "dotenv -- turbo build",
    "build": "turbo build",
    "clean": "find . -name node_modules -o -name .turbo -o -name .next -o -name dist -type d -prune | xargs rm -rf",
    "db:deploy": "dotenv -- turbo db:deploy",
    "db:studio": "cd packages/prisma && pnpm db:studio",
    "dev": "turbo dev --concurrency 1000",
    "docker:down": "docker compose -f docker-compose.yml down",
    "docker:up": "docker compose -f docker-compose.yml up --build -d",
    "dx:db-nuke": "cd packages && cd prisma && pnpm db:reset",
    "dx:db-seed": "node ./scripts/createEnvironment/prisma.js && turbo seed",
    "dx:db-view": "dotenv -- run-s db:studio",
    "dx:ui": "turbo dev --filter={design-react,ui}",
    "dx": "dotenv -- run-s docker:up dev",
    "format:fix": "turbo format:fix format-root:fix --continue",
    "format": "turbo format format-root --continue",
    "format-root": "prettier \"**/*.{ts,tsx,md,mdx,json}\" \"!apps/**\" \"!packages/**\" --check",
    "format-root:fix": "prettier \"**/*.{js,jsx,ts,tsx,md,mdx,json}\" \"!apps/**\" \"!packages/**\" --write --check",
    "kill-ports": "kill-port 3000,3001,5555",
    "lint:fix": "turbo lint:fix --continue",
    "lint": "turbo lint --continue",
    "start:api": "turbo start --filter=api",
    "test:e2e": "cd lib && cd e2e && npm run cypress:e2e",
    "test": "turbo test --continue --filter=ui",
    "typecheck": "turbo typecheck --continue"
  },
  "devDependencies": {
    "@kittr/prettier": "workspace:*",
    "@vercel/style-guide": "4.0.2",
    "dotenv-cli": "^6.0.0",
    "envfile": "6.17.0",
    "kill-port": "2.0.1",
    "npm-run-all": "4.1.5",
    "prettier": "2.7.1",
    "prettier-plugin-tailwindcss": "^0.2.8",
    "turbo": "latest"
  },
  "packageManager": "pnpm@8.2.0",
  "prisma": {
    "schema": "./packages/prisma/schema.prisma"
  }
}

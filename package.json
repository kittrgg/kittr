{
	"name": "kittr",
	"version": "0.0.0",
	"private": true,
	"workspaces": [
		"apps/**",
		"packages/**"
	],
	"packageManager": "yarn@1.22.0",
	"scripts": {
		"dx": "dotenv -- run-s docker:up dev",
		"dx:storybook": "cd packages/ui && yarn storybook",
		"dx:db-view": "dotenv -- run-s db:studio",
		"dev": "turbo run dev --filter=!storybook",
		"db:deploy": "dotenv -- turbo run db:deploy",
		"db:studio": "cd packages/prisma && yarn db:studio",
		"dx:db-seed": "node ./scripts/createEnvironment/prisma.js && turbo run seed",
		"dx:db-nuke": "cd packages && cd prisma && yarn db:reset",
		"dx:db-snapshot": "docker exec postgres pg_dump -U turboAf -Fc -f backup.sql prisma",
		"dx:seed-snapshot": "docker exec -i postgres dropdb dev -U dev && echo DB dropped. && docker exec -i postgres pg_restore -U dev -d template1 -v \"backup.pgsql\" --create ",
		"dx:sb": "turbo run dev --filter=storybook",
		"type-check": "turbo run type-check",
		"build": "turbo run build",
		"build:local": "dotenv -- turbo run build",
		"lint": "turbo run lint",
		"test": "turbo run test",
		"clean": "npx npkill",
		"docker:up": "docker compose -f docker-compose.yml up --build -d",
		"docker:down": "docker compose -f docker-compose.yml down",
		"format": "prettier \"**/*.{ts,tsx,md}\"",
		"kill-ports": "kill-port 3000,3001,5555",
		"build:api": "turbo run build --filter=api",
		"start:api": "turbo run start --filter=api",
		"test:e2e": "cd lib && cd e2e && npm run cypress:e2e"
	},
	"devDependencies": {
		"dotenv-cli": "^6.0.0",
		"envfile": "6.17.0",
		"kill-port": "2.0.1",
		"lint-staged": "12.3.4",
		"npm-run-all": "4.1.5",
		"prettier": "2.7.1",
		"turbo": "latest"
	}
}

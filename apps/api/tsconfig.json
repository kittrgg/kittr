{
	"compilerOptions": {
		"outDir": "build",
		"baseUrl": "./src",
		"module": "commonjs",
		"target": "es2015",
		"lib": ["es2017"],
		"strictNullChecks": true,
		"noImplicitAny": false,
		"preserveConstEnums": true,
		"removeComments": true,
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"incremental": true,
		"paths": {
			"@Root/*": ["./*"],
			"@Utils/*": ["./utils/*"],
			"@Libs/*": ["./libs/*"],
			"@v1/*": ["./v1/*"],
			"@Jest/*": ["./.jest/*"]
		}
	},
	"include": ["src/"],
	"exclude": [
		"node_modules",
		".turbo",
		"coverage",
		"build",
		"src/**/*.test.ts",
		"src/**/*.unit.ts",
		"src/**/*.int.ts"
	]
}

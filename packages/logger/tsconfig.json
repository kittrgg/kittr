{
	"extends": "@kittr/config/tsconfig/base.json",
	"compilerOptions": {
		"lib": ["ES2015"],
		"module": "CommonJS",
		"outDir": "./",
		"rootDir": "./src",
		"incremental": true,
		"tsBuildInfoFile": "./.tsbuildinfo"
	},
	"exclude": [
		"node_modules",
		"**/*.test.tsx",
		"**/*.test.ts",
		"**/*.spec.tsx",
		"**/*.spec.ts",
		"**/*.d.ts"
	],
	"include": ["src"]
}
